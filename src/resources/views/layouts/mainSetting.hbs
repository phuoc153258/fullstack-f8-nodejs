    {{#if user}}
    <script>
        let userImg = document.querySelector('#user-img');
        let userMenu = document.querySelector('#user-menu');
        function showUserMenu() {
            if (userImg.classList.contains('hide')) {
                userImg.classList.remove('hide');
                userMenu.classList.remove('d-none');
            } else {
                userImg.classList.add('hide');
                userMenu.classList.add('d-none');
            }
        }
        window.addEventListener(
            'click',
            function (e) {
                userImg.classList.add('hide');
                userMenu.classList.add('d-none');
            },
            true,
        );
    </script>
    {{/if}}
    <script>
        function editProfileBtn(name) {
            document.getElementById("edit-btn-"+ name).classList.add('d-none');
            document.getElementById("save-btn-"+ name).classList.remove('d-none');
            document.getElementById("setting-input-"+ name).removeAttribute("readonly")
        }
        function cancelEditProfile(name){
            document.getElementById("edit-btn-"+ name).classList.remove('d-none');
            document.getElementById("save-btn-"+ name).classList.add('d-none');
            document.getElementById("setting-input-"+ name).setAttribute("readonly","")
        }
    </script>
    <script>
        function uploadAvatarUser() {
