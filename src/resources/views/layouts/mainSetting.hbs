        function editUploadBtn() {
            document.getElementById("edit-btn-upload").classList.add('d-none');
            document.getElementById("save-btn-upload").classList.remove('d-none');
            document.getElementById("setting-upload-div").classList.add('setting-info-avatar-active')
            document.getElementById("setting-upload-icon").classList.remove('d-none');
        }
        function cancelEditUpload() {
            document.getElementById("edit-btn-upload").classList.remove('d-none');
            document.getElementById("save-btn-upload").classList.add('d-none');    
            document.getElementById("setting-upload-div").classList.remove('setting-info-avatar-active')
            document.getElementById("setting-upload-icon").classList.add('d-none');
        }
        function submitValueToEditProfile(key){
            const value = document.getElementById('setting-input-'+key).value
            document.getElementById("edit-profile-input").setAttribute("name",key)
            document.getElementById("edit-profile-input").setAttribute("value",value)
            document.getElementById("form-setting-edit-profile").submit()
        }
